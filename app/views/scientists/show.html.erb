<h1>Name: <%= @scientist.name %></h1>
<p>Specialty: <%= @scientist.specialty %></p>
<p>University: <%= @scientist.university %></p>
<p>Current Lab: <%= @scientist.lab.name %></p>

<h3>Experiments:</h3>
  <ul>
    <% @scientist.experiments.each do |experiment| %>
      <section id="experiment-<%= experiment.id %>">
        <li>
          <%= experiment.name %>
          <%= button_to "Remove", "/scientists/#{@scientist.id}", method: :delete, params: { experiment_id: experiment.id } %>
        </li>
      </section><br>
    <% end %>
  </ul>


